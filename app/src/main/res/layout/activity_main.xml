<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/paribuBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Paribu"/>
            <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/koineksBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Koineks"/>

            <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btcturkBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="BtcTurk"/>

            <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/sistemKoinBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sistem Koin"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Choose Allowed Coins(If not selected are all listed)"
                        android:textSize="12dp"
                        android:gravity="center"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <CheckBox
                            android:id="@+id/btcChk"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bitcoin(BTC)"/>
                    <CheckBox
                            android:id="@+id/xrpChk"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ripple(XRP)"/>
                    <CheckBox
                            android:id="@+id/ethChk"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ethereum(ETH)"/>

                </LinearLayout>
            </LinearLayout>

            <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>
        <TextView
                android:id="@+id/responseTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
    </LinearLayout>
</ScrollView>